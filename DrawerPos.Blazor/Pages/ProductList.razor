@page "/products"
@inject DrawerPos.Blazor.Services.ProductService ProductService
@using DrawerPos.Shared

<h3>Products</h3>
<p>
    <a href="/products/create">Create New Product</a>
</p>

@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td><img src="@product.Image" alt="@product.ProductName" style="width: 50px; height: auto;" /></td>
                    <td>@product.ProductName</td>
                    <td>@product.Category?.CategoryName</td>
                    <td>@product.Price</td>
                    <td>@product.Unit</td>
                    <td>@product.Status</td>
                    <td>
                        <a href="/products/edit/@product.ProductId">Edit</a> |
                        <a href="/products/delete/@product.ProductId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Product> products;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetProducts();
    }
}
