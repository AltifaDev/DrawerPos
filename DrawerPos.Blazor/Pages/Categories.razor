@page "/categories"
@inject DrawerPos.Blazor.Services.CategoryService CategoryService
@using DrawerPos.Shared

<h3>Categories</h3>
<p>
    <a href="/categories/create">Create New Category</a>
</p>

@if (categories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in categories)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>
                        <a href="/categories/edit/@category.CategoryId">Edit</a> |
                        <a href="/categories/delete/@category.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Category> categories;

    protected override async Task OnInitializedAsync()
    {
        categories = await CategoryService.GetCategories();
    }
}
